extend type Query {

    #查询权威源注册信息
    upstreams(id:ID,filter:UpstreamFilter):[Upstream]

    #新版查询权威源及类型(带类型)
    upstreamsAndTypes(id:ID,filter:UpstreamFilter):[Upstream]

}
extend type Mutation {


    #新增权威源注册
    saveUpstream(entity:InputUpstream!):Upstream

    #新版权威源注册(带类型)
    #    saveUpstreamAndTypes(entity:InputUpstream!):upstream
    #根据id删除权威源注册
    deleteUpstream(id:ID!): Upstream
    #更新权威源注册
    updateUpstream(entity:InputUpstream!):Upstream

    #更新权威源及类型
    #    updateUpstreamAndTypes(entity:InputUpstream!):upstream
}



#权威源注册信息实体
type Upstream{
    # 主键
    id:ID
    # 应用代码，如人事：HR_SYS
    appCode:String
    # 应用名称，如人事
    appName:String
    # 数据前缀代码 HR
    dataCode:String
    # 注册时间
    createTime:Timestamp
    # 修改时间
    updateTime:Timestamp
    # 启用时间
    activeTime:Timestamp
    # 注册人员
    createUser:String
    # 状态  启用/不启用
    active:Boolean
    # 代表色
    color:String
    #权威源类型
    upstreamTypes:[UpstreamType]
    #是否来自本租户
    local:Boolean
    #是否被禁用
    disEnable:Boolean

}



# 权威源注册入参
input InputUpstream{
    # 主键
    id:ID
    # 应用代码，如人事：HR_SYS
    appCode:String
    # 应用名称，如人事
    appName:String
    # 数据前缀代码 HR
    dataCode:String
    # 注册时间
    createTime:Timestamp
    # 修改时间
    updateTime:Timestamp
    # 启用时间
    activeTime:Timestamp
    # 注册人员
    createUser:String
    # 状态  启用/不启用
    active:Boolean
    # 代表色
    color:String
    #权威源类型
    upstreamTypes:[InputUpstreamType]

}

input UpstreamFilter{
    appCode:stringFilter
    appName:stringFilter
    dataCode:stringFilter
    active:booleanFilter
    color:stringFilter
    createTime:timestampFilter
    updateTime:timestampFilter
}




